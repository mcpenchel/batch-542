<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :species, collection: Pet::SPECIES %>
  <%= f.input :address %>
  <%= f.input :date_found, as: :date, start_year: Date.today.year - 1,
                                      end_year: Date.today.year %>
  <%= f.button :submit, "Update the Pet", class: 'btn btn-primary' %>
<% end %>